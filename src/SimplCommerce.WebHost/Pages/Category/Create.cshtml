@page
@model SimplCommerce.WebHost.Pages.Category.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category.Name" class="control-label"></label>
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.Slug" class="control-label"></label>
                <input asp-for="Category.Slug" class="form-control" />
                <span asp-validation-for="Category.Slug" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.Description" class="control-label"></label>
                <input asp-for="Category.Description" class="form-control" />
                <span asp-validation-for="Category.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.DisplayOrder" class="control-label"></label>
                <input asp-for="Category.DisplayOrder" class="form-control" />
                <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Category.IsPublished" /> @Html.DisplayNameFor(model => model.Category.IsPublished))
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Category.IncludeInMenu" /> @Html.DisplayNameFor(model => model.Category.IncludeInMenu))
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Category.ParentId" class="control-label"></label>
                <input asp-for="Category.ParentId" class="form-control" />
                <span asp-validation-for="Category.ParentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.ChildrenId" class="control-label"></label>
                <input asp-for="Category.ChildrenId" class="form-control" />
                <span asp-validation-for="Category.ChildrenId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.ThumbnailImageUrl" class="control-label"></label>
                <input asp-for="Category.ThumbnailImageUrl" class="form-control" />
                <span asp-validation-for="Category.ThumbnailImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.LastModified" class="control-label"></label>
                <input asp-for="Category.LastModified" class="form-control" />
                <span asp-validation-for="Category.LastModified" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Category.IsDeleted" /> @Html.DisplayNameFor(model => model.Category.IsDeleted))
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
