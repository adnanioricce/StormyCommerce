@model SimplCommerce.WebHost.Pages.Category.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Slug)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].DisplayOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].IsPublished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].IncludeInMenu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].ParentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].ChildrenId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].ThumbnailImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].LastModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Category) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPublished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IncludeInMenu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChildrenId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThumbnailImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
